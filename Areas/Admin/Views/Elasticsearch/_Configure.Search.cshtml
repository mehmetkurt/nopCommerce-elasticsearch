@model ConfigurationModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="SearchType_OverrideForStore" asp-input="SearchType" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="SearchType" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="SearchType" asp-items="Model.AvailableSeachTypes" />
            <span asp-validation-for="SearchType"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="ResultLimit_OverrideForStore" asp-input="ResultLimit" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="ResultLimit" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ResultLimit" />
            <span asp-validation-for="ResultLimit"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="ImmediatelyUpdateIndexes_OverrideForStore" asp-input="ImmediatelyUpdateIndexes" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="ImmediatelyUpdateIndexes" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ImmediatelyUpdateIndexes" />
            <span asp-validation-for="ImmediatelyUpdateIndexes"></span>
        </div>
    </div>
</div>